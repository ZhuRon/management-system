wh($width,$height)
    width $width
    height $height
    
border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
    display: none

ct()
    position absolute
    top 50%
    transform translateY(-50%)

fj($type=space-between)
    display  flex
    justify-content $type
    
